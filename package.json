{
  "name": "olofs-chat-app",
  "version": "1.0.0",
  "description": "A small application that replicates slack as a chat environment written with Express&React and using websocket",
  "main": "server/src/index.ts",
  "author": "Jan Nyholm",
  "license": "MIT",
  "private": false,
  "scripts": {
    "start": "tsc && node ./dist/server/server.js",
    "serve": "tsc && cd client && yarn && yarn build",
    "start-nodemon": "nodemon",
    "build": "tsc"
  },
  "dependencies": {
    "express": "^4.17.1",
    "nodemon": "^1.19.2",
    "socket.io": "^2.3.0",
    "ws": "^7.1.2"
  },
  "devDependencies": {
    "@types/socket.io": "^2.1.2",
    "@types/express": "^4.17.1",
    "@types/ws": "^6.0.3"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "server/src"
    ],
    "exec": "yarn start",
    "ext": "tsc"
  }
}
